{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "outDir": "bin",
    "allowImportingTsExtensions": false,
    "emitDeclarationOnly": false,
    "declaration": true
  },
  "include": ["src"]
}
